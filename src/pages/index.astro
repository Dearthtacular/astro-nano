---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hi, I'm Jonathan <span class="text-xl">üëãüèª</span> 
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I am a software engineer with expertise in front-end and full-stack application development. 
            Leveraging a background in IT systems analysis, business consulting, project management, and entrepreneurship, 
            I possess a deep understanding of diverse stakeholder needs‚Äîfrom creating seamless interfaces for end-users to generating 
            actionable data for decision-makers. My goal is to lead and innovate in software development, creating scalable and 
            integrative solutions that bridge the gap between technical functionalities and strategic business objectives.
            <br>
            <br>
            Why I decided to switch career paths?  The answer is threefold:
            <ol class="animate">
              <li>
                In the coming decades there will be two types of people - those who build technology and those who get replaced by it.
                I prefer to be a member of the former
              </li>
              <li>
                My prior endeavors have taken me across numerous discplines spanning multiple industries all over the world.  It is time
                to focus my talents and skills while putting down roots (so to speak)
              </li>
              <li>
                My past roles have not yielded the opportunity for remote work.  Coding does.
              </li>
            </ol>
          </p>
        </article>
      </section>

